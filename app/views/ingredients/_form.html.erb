<div class="container">
  <div class="row">
    <div class="col-12">

    </div>
  </div>
</div>
<%= simple_form_for [@recette, @ingredient] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nom %>
    <%= f.input :quantite %>
    <%= f.input :marque %>
    <%= f.input :note %>
    <%= f.input :prix %>
    <%= f.input :description %>
    <%#= f.association :recette %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-primary" %>
  </div>
<% end %>
