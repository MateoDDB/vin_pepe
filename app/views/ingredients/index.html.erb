<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h1>Ingredients</h1>
    </div>
    <div class="col-12">
      <h1>Ingredients</h1>
    </div>
  </div>
</div>


<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Quantite</th>
      <th>Marque</th>
      <th>Note</th>
      <th>Prix</th>
      <th>Description</th>
      <th>Recette</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.nom %></td>
        <td><%= ingredient.quantite %></td>
        <td><%= ingredient.marque %></td>
        <td><%= ingredient.note %></td>
        <td><%= ingredient.prix %></td>
        <td><%= ingredient.description %></td>
        <td><%= ingredient.recette_id %></td>
        <td><%= link_to 'Voir', ingredient %></td>
        <td><%= link_to 'Modifier', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Supprimer', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

